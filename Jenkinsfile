pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /Users/jianghui/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Deliver') { 
            steps {
                sh './jenkins/scripts/deliver.sh' 
            }
        }
    }
}

/* 
pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
