<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 优先级由低到高：这里的、属性文件的、api方法调用时传递的 -->
	<properties resource="application-dataSource.properties">
		<property name="username" value="dev_user" />
		<property name="password" value="F2Fa3!33TYyg" />
		<property
			name="org.apache.ibatis.parsing.PropertyParser.enable-default-value"
			value="true" /> <!-- Enable this feature。可自定义分隔符 -->
	</properties>
	<typeAliases>
		<package name="com.sky.mybatis.mybatis" /><!-- 配置后，可以不用写类的全限定名 -->
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${datasource.driverClassName}" />
				<property name="url"
					value="${master.datasource.url:jdbc:mysql://localhost:3306/bookshop?useUnicode=true&amp;characterEncoding=utf-8}" />
				<property name="username" value="${master.datasource.username}" />
				<property name="password" value="${master.datasource.password}" />
			</dataSource>
		</environment>
		<environment id="sampdb">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${datasource.driverClassName}" />
				<property name="url"
					value="${cluster.datasource.url:jdbc:mysql://localhost:3306/sampdb?useUnicode=true&amp;characterEncoding=utf-8}" />
				<property name="username" value="${cluster.datasource.username}" />
				<property name="password" value="${cluster.datasource.password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/sky/mybatis/mybatis/data/UserMapper.xml" />
		<mapper class="com.sky.mybatis.mybatis.data.StudentMapper" />
	</mappers>
</configuration>